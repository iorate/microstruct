{
  "name": "microstruct",
  "description": "Less than 500B subset of Superstruct specialized in validating and typing data decoded from JSON.",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    "types": "./dist/microstruct.d.ts",
    "require": "./dist/microstruct.cjs",
    "default": "./dist/microstruct.js"
  },
  "types": "dist/microstruct.d.ts",
  "main": "dist/microstruct.cjs",
  "module": "dist/microstruct.js",
  "author": "iorate",
  "bugs": {
    "url": "https://github.com/iorate/microstruct/issues"
  },
  "homepage": "https://github.com/iorate/microstruct#readme",
  "keywords": [
    "superstruct",
    "validate",
    "type",
    "json"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iorate/microstruct.git"
  },
  "sideEffects": false,
  "devDependencies": {
    "@types/eslint": "^8.4.10",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "jest": "^29.3.1",
    "microbundle": "^0.15.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "semantic-release": "^19.0.5",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  },
  "files": [
    "dist"
  ],
  "packageManager": "yarn@3.3.1",
  "scripts": {
    "build": "microbundle build --format cjs,modern --no-sourcemap",
    "watch": "microbundle watch --format cjs,modern --no-sourcemap",
    "lint": "run-p --print-label lint-eslint lint-prettier lint-tsc",
    "lint-eslint": "eslint .",
    "lint-prettier": "prettier --check --loglevel warn .",
    "lint-tsc": "tsc --noEmit",
    "fix": "run-s --print-label fix-eslint fix-prettier",
    "fix-eslint": "eslint --fix .",
    "fix-prettier": "prettier --write --loglevel warn .",
    "test": "jest"
  },
  "source": "src/microstruct.ts"
}
