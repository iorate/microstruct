{
  "name": "microstruct",
  "version": "0.1.0",
  "description": "Less than 500B subset of Superstruct specialized in validating and typing data decoded from JSON.",
  "source": "src/microstruct.ts",
  "main": "dist/microstruct.js",
  "module": "dist/microstruct.esm.js",
  "umd:main": "dist/microstruct.umd.js",
  "types": "microstruct.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./microstruct.d.ts",
        "default": "./dist/microstruct.js"
      },
      "import": {
        "types": "./microstruct.d.ts",
        "default": "./dist/microstruct.esm.js"
      },
      "umd": {
        "types": "./microstruct.d.ts",
        "default": "./dist/microstruct.umd.js"
      }
    }
  },
  "author": "iorate",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "esmodules": true
          }
        }
      ]
    ]
  },
  "bugs": {
    "url": "https://github.com/iorate/microstruct/issues"
  },
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.3.1",
    "microbundle": "^0.15.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "semantic-release": "^19.0.5",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "prettier"
    ],
    "ignorePatterns": [
      "/dist",
      "*.d.ts"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "files": [
    "LICENSE.txt",
    "README.md",
    "dist/microstruct.esm.js",
    "dist/microstruct.js",
    "dist/microstruct.umd.js",
    "microstruct.d.ts",
    "package.json"
  ],
  "jest": {
    "preset": "ts-jest"
  },
  "homepage": "https://github.com/iorate/microstruct#readme",
  "keywords": [
    "assert",
    "assertion",
    "check",
    "checker",
    "hapi",
    "joi",
    "json",
    "schema",
    "superstruct",
    "type",
    "types",
    "valid",
    "validate",
    "validation",
    "validator"
  ],
  "license": "MIT",
  "mangle": {
    "regex": "^_"
  },
  "packageManager": "yarn@3.3.1",
  "peerDependencies": {
    "typescript": ">=4.1.2"
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": "*.md",
        "options": {
          "printWidth": 80
        }
      }
    ]
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iorate/microstruct.git"
  },
  "scripts": {
    "build": "microbundle build --format es,cjs,umd --no-sourcemap",
    "lint": "run-p lint-eslint lint-prettier",
    "lint-eslint": "eslint .",
    "lint-prettier": "prettier --check --loglevel warn .",
    "fix": "run-s fix-eslint fix-prettier",
    "fix-eslint": "eslint --fix .",
    "fix-prettier": "prettier --write --loglevel warn .",
    "test": "jest",
    "watch": "microbundle watch --format es,cjs,umd --no-sourcemap"
  },
  "sideEffects": false
}
